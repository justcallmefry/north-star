# Database (required for production)
DATABASE_URL="postgresql://user:password@host:5432/dbname?sslmode=require"

# NextAuth (required)
AUTH_SECRET="generate-with-openssl-rand-base64-32"
# Local dev: set this so login redirect and session work (use the port you open in the browser).
AUTH_URL="http://localhost:3000"
# Production (or leave unset and auth route uses request host on localhost)
NEXTAUTH_URL="https://alignedconnectingcouples.com"
# Optional for production behind a proxy: AUTH_TRUST_HOST=true

# Optional: override in production (Vercel sets VERCEL_URL; auth route uses it if AUTH_URL/NEXTAUTH_URL is wrong)
# AUTH_URL="https://alignedconnectingcouples.com"

# App URL for emails and links (optional; defaults from NEXTAUTH_URL)
NEXT_PUBLIC_APP_URL="https://alignedconnectingcouples.com"

# Email: magic-link sign-in (optional; if missing, password-only)
# Resend (recommended)
RESEND_API_KEY="re_xxxx"
EMAIL_FROM="noreply@yourdomain.com"
# Or SMTP
# EMAIL_SERVER="smtps://user:pass@smtp.example.com:465"
# EMAIL_FROM="noreply@yourdomain.com"

# Stripe (optional; only if you enable payments)
# STRIPE_SECRET_KEY="sk_xxx"
# STRIPE_PUBLISHABLE_KEY="pk_xxx"

# Content review cron (optional; see app/api/cron/content-review)
# CONTENT_REVIEW_EMAIL="you@example.com"
# CRON_SECRET="random-secret-for-vercel-cron"

# Usage stats API (optional; GET /api/admin/usage with Authorization: Bearer <USAGE_SECRET>)
# USAGE_SECRET="random-secret-for-admin-usage"
